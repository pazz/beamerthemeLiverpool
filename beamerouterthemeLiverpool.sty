\newcommand{\gettikzxy}[3]{%
  \tikz@scan@one@point\pgfutil@firstofone#1\relax
  \edef#2{\the\pgf@x}%
  \edef#3{\the\pgf@y}%
}

  
% Frame title
\defbeamertemplate*{frametitle}{Liverpool}[1][]
{
%\vskip0.5cm%
  \begin{beamercolorbox}[wd=\paperwidth,ht=1.5cm]{frametitle} 
  \begin{tikzpicture}
  \useasboundingbox[fill=white](0,-0.5) rectangle(\the\paperwidth,\the\paperheight);
   \node (A) at (\the\paperwidth,\the\paperheight){};
  \gettikzxy{(A)}{\ax}{\ay}

        \fill [wwsurroundcolour]
               (0,\the\paperheight) -- 
              (\the\paperwidth,\the\paperheight) -- 
              (\the\paperwidth,0.7cm-0\paperwidth) -- 
              (0,0.7cm-0\paperwidth) --
              cycle;


        % \node[fill] (A) at (\ax-2.5cm+1.3cm,0){};
   
   \ifx\insertframesubtitle\@empty%
      {\node[anchor=west, font=\Large,draw=Classic Black, line width=1.5pt] at (1,0){\insertframetitle};}
      \else%
      {\node[font=\large,draw=Classic Black, line width=1.5pt, anchor=south west,font=\bf] (Z) at (1,-0.3){\insertframetitle};%
       \node[font=\small,draw=Classic Black, line width=1.5pt, anchor=north west,yshift=1.5pt] at (2,-0.3) {\insertframesubtitle};}%
      \fi
  \end{tikzpicture}
  \end{beamercolorbox}
%\vskip0.3cm%
}

