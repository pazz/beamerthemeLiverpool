\mode<presentation>

\RequirePackage{uolbricks}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% BACKGROUND CANVAS
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\defbeamertemplate{background}{image right}[1][]{
  % only change first slide, rest defaults to single colour (normal text.bg)
   \begin{tikzpicture}
   \useasboundingbox (0,0) rectangle(\the\paperwidth,\the\paperheight);
   \node[inner sep=0pt,anchor=north east] at (\the\paperwidth,\the\paperheight) {\includegraphics[height=\the\paperheight]{#1}};
   \end{tikzpicture}
}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% TITLE PAGE
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%
% TITLE PAGE ELEMENT TITLE
% set Title+Subtitle as brick
\defbeamertemplate{title}{Liverpool}[1][left]{%
   \begin{beamercolorbox}[sep=8pt,#1]{title}
    \usebeamerfont{title}
    % Display title+subtitle as brickpile if subtitle is defined
    \ifx\insertsubtitle\@empty%
        \uolbrick{\inserttitle}\par%
    \else % Display title as single brick otherwise
        \uolbricks{
          \inserttitle
        }{
          \usebeamerfont{subtitle}\insertsubtitle
        }
    \fi%
    \end{beamercolorbox}
}

% TITLE PAGE ELEMENTS AUTHOR and date
% no extra space and left align as default
\defbeamertemplate{author}{Liverpool}[1][left]{%
  \begin{beamercolorbox}[#1]{author}
    \usebeamerfont{author}\insertauthor
  \end{beamercolorbox}
}
% TITLE PAGE ELEMENTS DATE
% no extra space and left align as default
\defbeamertemplate{date}{Liverpool}[1][left]{%
  \begin{beamercolorbox}[#1]{date}
    \usebeamerfont{date}\insertdate
  \end{beamercolorbox}
}

% TITLE PAGE LAYOUT
\defbeamertemplate*{title page}{Liverpool}[1][left]{%
    \begin{beamercolorbox}{institute}
    % UOL logo top left
    \ifx\inserttitlegraphic\@empty
    \else
    \tikz[baseline] {
        \node[anchor=west,inner sep=0pt] (a) at (0,0) {
            \includegraphics[width=0.22\paperwidth]{\inserttitlegraphic}
        };
    }
    \fi
    % institute top left (only if non-empty)
    \ifx\insertinstitute\@empty
      \hfill
    \else
      \hfill
      \usebeamerfont{institute}
      \begin{tikzpicture}[baseline]
          \node[anchor=east,outer sep=0pt,inner xsep=0.6em,align=left] (a) at (0,0) {\insertinstitute};
          \draw[line width=0.6em] (a.south west) -- (a.north west);
      \end{tikzpicture}
    \fi
    \end{beamercolorbox}
   
    \vfill
    \bigskip
    \usebeamertemplate{title}
    \vskip0.75cm%
    \vfill
    \usebeamertemplate{author}
    \usebeamertemplate{date}
}[action]{
  % use the uolbrick template for title+subtitle
  \setbeamertemplate{title}[Liverpool][#1]
  \setbeamertemplate{author}[Liverpool][left]
  \setbeamertemplate{date}[Liverpool][left]
}


% FRAME TITLE
\defbeamertemplate*{frametitle}{Liverpool}[1][]
{
\vskip0.5cm%
   \usebeamerfont{frametitle}
   \usebeamercolor[fg]{frametitle}
   \ifx\insertframesubtitle\@empty%
      \uolbrick{\insertframetitle}
   \else%
       \uolbricks[font=\usebeamerfont{frametitle}][font=\usebeamerfont{framesubtitle}]{
          \insertframetitle
       }{
          \usebeamercolor[fg]{framesubtitle}
          \usebeamerfont{framesubtitle}
          \insertframesubtitle
       }
   \fi
\vskip0.3cm%
}



